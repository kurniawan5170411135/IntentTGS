<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM : "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim"
        android:text="Nama : "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:text="Nilai : "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilai"
        android:text="KETERANGAN : "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nim2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nim"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nama2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim2"
        android:layout_toRightOf="@id/nama"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nilai2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:layout_toRightOf="@id/nilai"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/keterangan2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilai"
        android:layout_toRightOf="@id/keterangan"
        android:textSize="18sp" />

</RelativeLayout>